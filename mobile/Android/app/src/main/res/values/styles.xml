<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/text_size_display1</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">@color/colorTextBody1</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1.Html" parent="AppTheme.TextAppearance.Body1">
        <item name="android:linksClickable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColorLink">@color/colorAccentTrans70</item>
    </style>

    <style name="AppTheme.TextAppearance.Icon.ChatContact" parent="AppTheme.TextAppearance.Body1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_chat_list_item_contact_large</item>
        <item name="android:background">@drawable/background_shape_circle_primary</item>
    </style>

    <style name="AppTheme.TextAppearance.Indicator.Duress" parent="AppTheme.TextAppearance.Body1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_chat_indicator_duress</item>
        <item name="android:background">@drawable/background_shape_rect_rounded_duress</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ChatContact" parent="AppTheme.TextAppearance.Body1">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_chat_contact</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextAppearance.ChatLastTime" parent="AppTheme.TextAppearance.Body1">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_chat_last_time</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Widget.Button.Colored.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_btn_colored</item>
        <item name="android:textColor">@color/colorTextButtonPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Widget.Button.Colored.Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Widget.Button.NoBackground" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorTextBody1</item>
    </style>

    <style name="AppTheme.Widget.ProgressBar.Colored" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/AppTheme.HintText</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:layout_height">@dimen/height_edit_text</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:background">@drawable/background_selector_edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_accent_trans_70</item>
        <item name="android:drawableRight">@drawable/btn_edit_text_clear</item>
        <item name="android:paddingEnd">@dimen/padding_btn_edit_text</item>
        <item name="android:layout_height">@dimen/height_edit_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.TextInputEditText.Password" parent="AppTheme.TextInputEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/editTextHint</item>
    </style>

    <dimen name="text_size_chat_last_time">14sp</dimen>
    <dimen name="text_size_chat_contact">18sp</dimen>
</resources>
