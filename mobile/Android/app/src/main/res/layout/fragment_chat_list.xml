<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="data"
                type="io.nomasters.android.handshake.ui.chatlist.ChatListViewModel"/>

        <variable
                name="callback"
                type="io.nomasters.android.handshake.ui.chatlist.ChatListFragmentActionCallback"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_chat_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:context="./ui/chatlist/ChatListFragment">

        <View
                android:background="@color/colorBackground"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.50"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_keyline_start_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/keyline_horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_keyline_end_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/keyline_horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_keyline_top_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/keyline_vertical"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_keyline_bottom_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/keyline_vertical"/>

        <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/background_selector_settings"
                android:id="@+id/btn_settings"
                android:layout_height="25dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:padding="0dp"
                app:layout_constraintStart_toStartOf="@+id/guideline_keyline_start_1"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/text_title_handshake"
                app:layout_constraintBottom_toBottomOf="@id/btn_settings"
                app:layout_constraintEnd_toEndOf="@+id/guideline_keyline_end_1"
                app:layout_constraintStart_toStartOf="@+id/guideline_keyline_start_1"
                app:layout_constraintTop_toTopOf="@+id/btn_settings"/>

        <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/background_selector_create_chat"
                android:id="@+id/btn_create_chat"
                android:layout_height="28dp"
                android:layout_marginEnd="6dp"
                android:layout_width="28dp"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_settings"
                app:layout_constraintEnd_toEndOf="@+id/guideline_keyline_end_1"
                app:layout_constraintTop_toTopOf="@+id/btn_settings"
                />

        <View
                android:background="@color/colorGray"
                android:id="@+id/search_bar"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_keyline_end_1"
                app:layout_constraintStart_toStartOf="@id/guideline_keyline_start_1"
                app:layout_constraintTop_toBottomOf="@+id/btn_settings"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_chats"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="32sp"
                android:layout_width="0dp"
                app:bottomSpacingDecorator="@{@dimen/recycler_view_offset_bottom_chat_list}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/guideline_keyline_end_1"
                app:layout_constraintStart_toStartOf="@id/guideline_keyline_start_1"
                app:layout_constraintTop_toBottomOf="@+id/search_bar"
                app:adapter="@{data.adapter}"
                tools:itemCount="4"
                tools:listitem="@layout/item_chat_list"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>